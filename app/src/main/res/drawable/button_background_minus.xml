<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <!--  Non focused states -->
  <item android:state_focused="false" android:state_selected="false" android:state_pressed="false" android:drawable="@drawable/button_minus_unfocused" />
  <item android:state_focused="false" android:state_selected="true" android:state_pressed="false" android:drawable="@drawable/button_minus_unfocused" />

  <!--  Focused states -->
  <item android:state_focused="true" android:state_selected="false" android:state_pressed="false" android:drawable="@drawable/button_minus_focus" />
  <item android:state_focused="true" android:state_selected="true" android:state_pressed="false" android:drawable="@drawable/button_minus_focus" />

  <!--  Pressed -->
  <item android:state_pressed="true" android:drawable="@drawable/button_minus_pressed" />

  <!-- Disable -->
  <item android:state_enabled="false" android:drawable="@drawable/button_minus_disable" />

</selector>